# ============================================================================
# Tradebaas Backend Environment Configuration
# Copy this file to .env and fill in your values
# ============================================================================

# ============================================================================
# Server Configuration
# ============================================================================
NODE_ENV=development
PORT=3000
HOST=127.0.0.1
WS_PORT=3001

# ============================================================================
# Database Configuration (Trade History)
# ============================================================================
DB_PROVIDER=sql                     # Options: 'sql' (SQLite - persistent) or 'kv' (in-memory - default)
TRADE_DB_PATH=../state/trades.db   # SQLite database path (only used if DB_PROVIDER=sql)

# ============================================================================
# Logging Configuration (Iteration 8 - OBS-001)
# ============================================================================
LOG_LEVEL=info                      # Options: error, warn, info, debug
LOG_DIR=./logs                       # Log directory path

# ============================================================================
# Telegram Notifications (Iteration 8 - NOTIF-001)
# ============================================================================
TELEGRAM_ENABLED=false              # Set to 'true' to enable Telegram alerts
TELEGRAM_BOT_TOKEN=                 # Get from @BotFather on Telegram
TELEGRAM_CHAT_ID=                   # Your Telegram chat ID

# ============================================================================
# Security Configuration (Iteration 8 - SEC-002, SEC-003)
# ============================================================================
# CORS Whitelist (comma-separated)
FRONTEND_URL=http://localhost:5173,http://localhost:5174

# Rate Limiting
RATE_LIMIT_MAX=10                   # Max requests per time window
RATE_LIMIT_WINDOW=1 minute          # Time window for rate limiting

